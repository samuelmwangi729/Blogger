<%- include('../../Layouts/Frontend/Header.ejs') %>
<div>
    <!-- main body content goes here -->
    <div class="row">
        <div class="col-sm-6 offset-sm-3">
            <div class="form-group">
                <form  method="post" action="/Verify/Account/Local">
                    <fieldset class="border border-danger rounded">
                        <legend>
                            <h2 class="text-center">
                                To Continue, Verify Your Emailsss
                            </h2>
                        </legend>
                        <div class="card border-0">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <h6 class="text-danger" id="errorText"></h6>
                                        <label for="Email Address" class="label-control">Verification Code</label>
                                        <input type="text" name="verificationToken" id="verifyCode" class="form-control" placeholder="Enter the code sent to your email account">
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-sm-6 offset-sm-3">
                                        <div class="g-recaptcha" data-sitekey="6Le7IDQpAAAAADi_Igd9ohqPzxjVvOvdUdLIF-XI"></div>
                                    </div>
                               </div>
                                <div class="row">
                                        <div class="col-sm-4 offset-sm-4">
                                            <button type="submit" class="btn btn-primary btn-block btn-sm">
                                               Verify
                                            </button>
                                        </div>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>
<%- include('../../Layouts/Frontend/Footer.ejs') %>
